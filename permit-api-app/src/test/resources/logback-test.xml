<configuration>
    <!-- Console appender for real-time feedback during tests -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender to save test logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>build/test-logs/permit-api-test-logs.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Log your project at DEBUG for full visibility -->
    <logger name="com.permittrack.permitapi" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- Show Spring MVC mappings to debug controller registration -->
    <logger
        name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping"
        level="DEBUG" />

    <!-- Root logger for other frameworks -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
