{
  "serverError": {
    "statusCode": 500,
    "body": {
      "error": "Internal Server Error",
      "message": "An unexpected error occurred on the server"
    }
  },
  "networkError": {
    "forceNetworkError": true
  },
  "notFound": {
    "statusCode": 404,
    "body": {
      "error": "Not Found",
      "message": "The requested permit could not be found"
    }
  },
  "badRequest": {
    "statusCode": 400,
    "body": {
      "error": "Bad Request",
      "message": "Invalid permit data provided",
      "validationErrors": [
        "permitName is required",
        "applicantName must be at least 2 characters"
      ]
    }
  },
  "unauthorized": {
    "statusCode": 401,
    "body": {
      "error": "Unauthorized",
      "message": "Authentication required to access this resource"
    }
  },
  "forbidden": {
    "statusCode": 403,
    "body": {
      "error": "Forbidden",
      "message": "Insufficient permissions to perform this action"
    }
  },
  "unprocessableEntity": {
    "statusCode": 422,
    "body": {
      "error": "Unprocessable Entity",
      "message": "Validation failed",
      "validationErrors": {
        "permitName": ["Must be between 1 and 255 characters"],
        "status": ["Must be a valid permit status"]
      }
    }
  },
  "badGateway": {
    "statusCode": 502,
    "body": {
      "error": "Bad Gateway",
      "message": "Upstream server error"
    }
  },
  "serviceUnavailable": {
    "statusCode": 503,
    "body": {
      "error": "Service Unavailable",
      "message": "Service temporarily unavailable"
    }
  },
  "createPermitConflict": {
    "statusCode": 409,
    "body": {
      "error": "Conflict",
      "message": "A permit with this name already exists"
    }
  },
  "updatePermitNotFound": {
    "statusCode": 404,
    "body": {
      "error": "Not Found",
      "message": "Cannot update permit: permit ID not found"
    }
  },
  "deletePermitNotFound": {
    "statusCode": 404,
    "body": {
      "error": "Not Found",
      "message": "Cannot delete permit: permit ID not found"
    }
  }
}
