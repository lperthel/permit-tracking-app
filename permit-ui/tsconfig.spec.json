//config spec for main permit-ui unit tests
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["jasmine"]
  },
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"],
  "exclude": [
    "cypress/**/*", // ✅ Exclude Cypress entirely
    "cypress.config.ts", // ✅ Exclude Cypress config
    "**/*.cy.ts", // ✅ Exclude Cypress test files
    "node_modules"
  ]
}
