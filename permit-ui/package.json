{
  "name": "permit-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "karma start",
    "test:coverage": "ng test --code-coverage --watch=false",
    "test:coverage:open": "npm run test:coverage && open coverage/*/index.html",
    "coverage:open": "open coverage/*/index.html",
    "faker": "json-server --watch ./server/database.json",
    "generate": "node ./server/generateData.mjs",
    "gs": "npm run generate && npm run faker",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "e2e:headless": "mkdir -p cypress/logs cypress/reports && cypress run --headless --reporter json --reporter-options 'output=cypress/reports/results.json' 2>&1 | tee \"cypress/logs/console-$(date +%Y%m%d-%H%M%S).log\"",
    "e2e:ci": "cypress run --browser chrome --headless --reporter spec --record false",
    "e2e:chrome": "cypress run --browser chrome --headless",
    "e2e:firefox": "cypress run --browser firefox --headless",
    "e2e:edge": "cypress run --browser edge --headless",
    "e2e:serve": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && npm run e2e:headless\" --kill-others --success first",
    "e2e:serve:ci": "concurrently \"ng serve\" \"wait-on http://localhost:4200 && npm run e2e:ci\" --kill-others --success first",
    "test:all": "npm run test && npm run e2e:headless"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/cdk": "^19.2.19",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.14",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/material": "^19.2.19",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "@faker-js/faker": "^9.8.0",
    "@ng-bootstrap/ng-bootstrap": "^18.0.0",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dompurify": "^3.2.6",
    "json-server": "^1.0.0-beta.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "uuid": "^11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular/build": "^19.2.15",
    "@angular/cli": "^19.2.15",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/localize": "^19.2.14",
    "@cypress/schematic": "^3.0.0",
    "cypress-plugin-tab": "^1.0.5",
    "@schematics/angular": "^19.2.15",
    "@types/dompurify": "^3.0.5",
    "@types/jasmine": "~5.1.0",
    "angular-eslint": "20.1.1",
    "concurrently": "^9.2.0",
    "cypress": "^14.5.1",
    "eslint": "^9.29.0",
    "jasmine-core": "~5.4.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-firefox-launcher": "^2.1.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "karma-spec-reporter": "^0.0.36",
    "typescript": "~5.6.3",
    "typescript-eslint": "8.34.1",
    "wait-on": "^8.0.4"
  }
}
